<%- include('../../partials/header.ejs') %> <!-- Importando o cabeçalho da página, HEADER -->
<body>
    <%- include('../../partials/homenavbar.ejs') %> <!-- Importando o navbar da página, NAVBAR -->

    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary" href="/<%= article.slug %> ">Ler Artigo</a>
                </div>
            </div>
            <br>
        <% }) %> 
    </div>
    
</body>
<%- include ('../../partials/footer.ejs') %>  <!-- Importando o footer da página, FOOTER -->